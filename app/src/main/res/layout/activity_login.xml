<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".LoginActivity"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/logomic"
            android:contentDescription="@string/logo" />


        <TextView
            android:id="@+id/login_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/login_logo"
            android:text="@string/login"
            android:textSize="38sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_email_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            android:layout_below="@+id/login_title_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/login_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/password_hint"
            android:layout_below="@+id/login_email_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/login"
            android:layout_below="@+id/login_password_editText"
            android:textSize="18sp"
            android:background="@drawable/custom_button"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"/>

        <Button
            android:id="@+id/login_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/register"
            android:layout_below="@+id/login_button"
            android:textSize="18sp"
            android:background="@drawable/custom_button_grey"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"/>

    </RelativeLayout>
</LinearLayout>

